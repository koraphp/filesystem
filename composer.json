{
    "name": "kora/filesystem",
    "type": "library",
    "description": "Filesystem for the Kora Framework.",
    "homepage": "https://github.com/koraphp/filesystem",
    "license": "MIT",
    "authors": [
        {
            "name": "Uriel Wilson",
            "email": "uriel@koraphp.com",
            "homepage": "https://koraphp.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
		"symfony/filesystem": "^5.4",
        "kora/debug": "^0.1",
        "symfony/var-dumper": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Kora\\Filesystem\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Filesystem\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
